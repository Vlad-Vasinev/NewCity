      .modal__body
        form#form-modal.form-request.form-order__el(action="/local/ajax/forms.php" data-redirect='/thanks.html')
          .ui-input.required(js-input-focus)
            label.ui-input__float-label.p1(for="form-modal-name-p") Your name
            input.form-order__input.p1(type="text" name="name" value="Arkady" id="name-gt" required placeholder="Arkady")
